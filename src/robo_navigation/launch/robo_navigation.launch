<launch>
<node name="rplidarNode"          pkg="rplidar_ros"  type="rplidarNode">
  <param name="serial_port"         type="string" value="/dev/ttyUSBA0"/>  
  <param name="serial_baudrate"     type="int"    value="115200"/>
  <param name="frame_id"            type="string" value="laser"/>
  <param name="inverted"            type="bool"   value="false"/>
  <param name="angle_compensate"    type="bool"   value="true"/>
</node>
<node
    name="tf_map_odom"
    pkg="tf"
    type="static_transform_publisher"
    args="-1 -1 0 0 0 0 map odom 40" />
<node
    name="tf_laser_base"
    pkg="tf"
    type="static_transform_publisher"
    args="0 0 0 3.14 0 0 base_link laser 40" />

<node pkg="robo_navigation" type="robo_navigation" name="robo_navigation" out_put="screen"/>
</launch>
